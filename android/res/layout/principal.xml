<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/layout"
    android:background="#ffffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ListView
        android:id="@+id/listaprod"
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:text="New Text"
        android:layout_alignParentBottom="true" />
    <TextView
        android:id="@+id/cant"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:textColor="#ffffffff"
        android:background="@drawable/toast_drawable"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="New Text"
        android:visibility="gone" />
    <TextView
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#ff000000"
        android:id="@+id/suma"
        android:background="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:text="0.00"
        android:layout_alignTop="@+id/text2"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />
    <SlidingDrawer
        android:orientation="vertical"
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="115.0dip"
        android:layout_alignParentBottom="true"
        android:handle="@+id/handle"
        android:content="@+id/content">
        <ImageView
            android:id="@id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tray_handle_pressed" />
        <RelativeLayout
            android:gravity="bottom|center"
            android:id="@id/content"
            android:background="#ffffff00"
            android:layout_width="fill_parent"
            android:layout_height="115.0dip">
            <TextView
                android:textSize="13.0dip"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:gravity="center"
                android:layout_width="90.0dip"
                android:layout_height="20.0dip"
                android:text="FECHA" />
            <TextView
                android:textSize="13.0dip"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:gravity="center"
                android:layout_width="40.0dip"
                android:layout_height="20.0dip"
                android:layout_marginLeft="90.0dip"
                android:text="CAN" />
            <TextView
                android:textSize="13.0dip"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:gravity="center"
                android:layout_width="130.0dip"
                android:layout_height="20.0dip"
                android:layout_marginLeft="130.0dip"
                android:text="PRODUCTO" />
            <TextView
                android:textSize="13.0dip"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:gravity="center"
                android:layout_width="80.0dip"
                android:layout_height="20.0dip"
                android:layout_marginLeft="260.0dip"
                android:text="PRECIO"
                android:textAlignment="center" />
            <ListView
                android:id="@+id/listanterior"
                android:background="#fffbefef"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20.0dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </SlidingDrawer>
    <ListView
        android:id="@+id/lista"
        android:background="#ffffffff"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@android:id/tabs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@android:id/tabs"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/lay"
        android:background="#ff2b97ff"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="-200.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_alignParentBottom="false">
        <TextView
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:gravity="center_vertical"
            android:id="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:text="CLIENTE: "
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <EditText android:textStyle="bold"
            android:id="@id/cliente"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="50.0dip"
            android:layout_toRightOf="@id/textView"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/textView" />
        <TextView
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:gravity="center_vertical"
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="55.0dip"
            android:text="OBS:  "
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:textStyle="bold"
            android:id="@+id/observacion"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="100.0dip"
            android:layout_marginTop="55.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_toRightOf="@id/textView"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/textView" />
        <ImageButton
            android:id="@+id/busc"
            android:background="#ff2b97ff"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/abc_ic_search_api_mtrl_alpha"
            android:layout_alignParentRight="true"
            android:onClick="Buscar"
            android:layout_alignParentEnd="true" />
        <ListView
            android:id="@+id/listacliente"
            android:background="#00ffffff"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="63.0dip"
            android:layout_marginTop="45.0dip"
            android:layout_marginRight="49.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>